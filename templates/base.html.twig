        <script type="text/javascript">
            function getSelectedText() {
                if (window.getSelection) {
                    return window.getSelection().toString();
                } else if (document.selection) {
                    return document.selection.createRange().text;
                }
                return '';
            }

            function copySlectionToClipboard(text) {
                if (!navigator.clipboard)
                    return;
                navigator.clipboard.writeText(text).then(function() {
                    clearSelection();
                    showCopyinfo()
                }, function(err) {
                    console.error('Could not copy text: ', err);
                });
            }

            function copyAllToClipboard(text) {
                if (!navigator.clipboard)
                    return;
                navigator.clipboard.writeText(text).then(function() {
                    showCopyinfo()
                }, function(err) {
                    console.error('Could not copy text: ', err);
                });
            }

            function clearSelection(){
                if (window.getSelection)
                    window.getSelection().removeAllRanges();
                else if (document.selection)
                    document.selection.empty();
            }

            function showCopyinfo() {
                var m = document.getElementById('copyinfo');
                m.classList.add('show');
                setTimeout(function () {
                    m.classList.remove('show')
                }, 3500)
            }

            document.getElementById('blabols')
            .addEventListener("mouseup", function() {
                var text = getSelectedText()
                if (text)
                    copySlectionToClipboard(text);
            });

            document.getElementById('copy-all')
            .addEventListener("click", function() {
                var text = document.getElementById('blabols').innerText;
                if (text)
                    copyAllToClipboard(text);
            });
        </script>
