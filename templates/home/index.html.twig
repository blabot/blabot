        <div class="container">
            <div class="header">
                <a href="/"class="logo"><img src="{{ asset('img/blabot-logo.jpg') }}" alt="Robot Blábot v vygenerovaným texem v paži"></a>
                <h1 class="mobile">{{ h1 }}</h1>
                <p class="about">{{ about }}</p>
                <ul class="navigation" role="menu">
                    <li {% if app.request.pathinfo == path('home', {'_locale': 'cs'}) %}class="active"{% endif %}>
                        <a href="{{ path('home', {'_locale': 'cs'}) }}" >Moderní čeština</a>
                    </li>
                    <li {% if app.request.pathinfo == path('home', {'_locale': 'cs', 'dictionary': 'capek'}) %}class="active"{% endif %}>
                        <a href="{{ path('home', {'_locale': 'cs', 'dictionary': 'capek'}) }}">Čapkovská čeština</a>
