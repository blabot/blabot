{% extends 'base.html.twig' %}

{% set about = "Blábot je generátor hezkých výplňových textů. Je vhodnější alternativou pro typografii a design za lorem ipsum." %}
{% set title = "Blábot – České Lorem ipsum" %}
{% set h1 = "České Lorem ipsum" %}
{% set currentFullUri = app.request.uriForPath(app.request.pathinfo) %}

{% block title %}{{ title }}{% endblock %}

{% block seo %}<meta property="description" content="{{ about }}">
        <meta property="og:title" content="{{ title }}">
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ currentFullUri }}">
        <meta property="og:image" content="{{ app.request.uriForPath(asset('img/blabot-logo.jpg')) }}">
        <meta property="og:image:type" content="image/jpeg">
        <meta property="og:image:width" content="307">
        <meta property="og:image:height" content="307">
        <meta property="og:description" content="{{ about }}">
{% endblock %}

